<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsFragment"
    android:id="@+id/statsLayout">
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="0dp"
        android:id="@+id/card_title">

        <TextView
            android:text="Date"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/left_title">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Time"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/right_title"/>

    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            app:cardElevation="0dp"
            android:id="@+id/card1"
            android:layout_alignTop="@id/card_title"
            android:layout_marginVertical="60dp">

                <TextView
                    android:text="03/09/19"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:id="@+id/left1">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0 seconds"
                    android:textAlignment="textEnd"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:id="@+id/right1"/>

        </android.support.v7.widget.CardView>


<android.support.v7.widget.CardView
android:layout_width="300dp"
android:layout_height="50dp"
android:layout_centerHorizontal="true"
app:cardBackgroundColor="#00000000"
android:layout_marginTop="10dp"
android:layout_marginBottom="0dp"
app:cardElevation="0dp"
android:id="@+id/card2"
android:layout_alignTop="@id/card1"
android:layout_marginVertical="60dp">

<TextView
    android:text="03/08/19"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginLeft="5dp"
    android:textSize="20dp"
    android:textColor="#ffffff"
    android:id="@+id/left2">
</TextView>

<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="1 hour 20 minutes"
    android:textAlignment="textEnd"
    android:gravity="center_vertical"
    android:layout_marginRight="20dp"
    android:textSize="15dp"
    android:textColor="#ffffff"
    android:id="@+id/right2"/>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="0dp"
        android:id="@+id/card3"
        android:layout_alignTop="@id/card2"
        android:layout_marginVertical="60dp">

        <TextView
            android:text="03/07/19"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/left3">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="20 minutes 5 seconds"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/right3"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="0dp"
        android:id="@+id/card4"
        android:layout_alignTop="@id/card3"
        android:layout_marginVertical="60dp">

        <TextView
            android:text="03/06/19"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/left4">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="59 minutes 20 seconds"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/right4"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="0dp"
        android:id="@+id/card5"
        android:layout_alignTop="@id/card4"
        android:layout_marginVertical="60dp">

        <TextView
            android:text="03/05/19"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/left5">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3 hours 2 minutes"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/right5"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>